<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uni.ard.fitnesstracker.ShareFragment"
    android:padding="8dp"
    android:orientation="vertical">


    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="Log in to social media"
        android:id="@+id/loginSocial"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved_rectangle"
        android:textColor="@color/dark_space_gray"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="Share on Facebook"
        android:id="@+id/shareFacebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved_rectangle"
        android:textColor="@color/dark_space_gray"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="Share on Twitter"
        android:id="@+id/shareTwitter"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved_rectangle"
        android:textColor="@color/dark_space_gray"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facebookLayout"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:background="@drawable/curved_rectangle"
        android:layout_marginBottom="8dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Facebook"
            android:textColor="@color/dark_space_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/facebookLikes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Likes: -"
                android:background="#00000000"
                android:textColor="@color/dark_space_gray" />



            <Button
                android:id="@+id/facebookComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Comments: -"
                android:background="#00000000"
                android:textColor="@color/dark_space_gray" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twitterLayout"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:background="@drawable/curved_rectangle"
        android:layout_marginBottom="8dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Twitter"
            android:textColor="@color/dark_space_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/twitterFavourites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Favourites: -"
                android:background="#00000000"
                android:textColor="@color/dark_space_gray" />

            <Button
                android:id="@+id/twitterRetweets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Retweets: -"
                android:background="#00000000"
                android:textColor="@color/dark_space_gray" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_gravity="center_horizontal" />

        <TextView android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select a value to view"
            android:textSize="18dp"
            android:gravity="center"  />

    </RelativeLayout>


</LinearLayout>
