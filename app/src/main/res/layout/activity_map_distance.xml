<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uni.ard.fitnesstracker.EditGoal">

<fragment
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/map"
    tools:context="com.uni.ard.fitnesstracker.MapDistance"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/controlLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/cancelMap"
            android:onClick="cancelMap"
            android:layout_weight="1"
            android:background="@drawable/curved_rectangle"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="0dp"
            android:textColor="#ff333333"
            android:clickable="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm"
            android:id="@+id/confirmMap"
            android:onClick="confirmPoints"
            android:layout_weight="1"
            android:background="@drawable/curved_rectangle"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="8dp"
            android:textColor="#ff333333"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>