<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/dark_space_gray</item>
        <item name="android:windowBackground">@color/blue_space</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:actionBarWidgetTheme">@style/PopupWrapper</item>
        <item name="android:spinnerItemStyle">@style/SpaceSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpaceSpinnerItemDropDownItem</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_space</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarDivider">@drawable/divider_actionbar</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:background">@drawable/vpi__tab_indicator_space</item>
        <item name="android:textColor">@color/light_space_gray</item>
    </style>

    <style name="MyActionBarTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/tab_indicator_ab_moonwalk</item>
    </style>

    <style name="SpaceSpinnerItem" parent="android:Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">@color/dark_space_gray</item>
    </style>

    <style name="SpaceSpinnerItemDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/light_space_gray</item>
    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/dark_space_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="PopupWrapper" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/YourPopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/light_space_gray</item>
    </style>


    <style name="YourPopupMenu">
        <item name="android:popupBackground">#EE333333</item>

    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF999999</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_moonwalk</item>
        <!--item name="android:textColor">@color/light_space_gray</item-->
    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FF333333</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/dark_space_gray</item>
    </style>

    <color name="blue_space">#FF000033</color>

    <color name="dark_space_gray">#FF333333</color>

    <color name="light_space_gray">#FF999999</color>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow</item>
    </style>


    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/dark_space_gray</item>
    </style>


</resources>
